<UserControl x:Class="RecipeApp_labb3Db.Presentation.Views.RecipeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeApp_labb3Db.Presentation.Views" xmlns:viewmodels="clr-namespace:RecipeApp_labb3Db.Presentation.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RecipeListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background= "White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ListView 
                  ItemsSource="{Binding Recipes}" 
                  
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            
                            <TextBlock Text="{Binding Name}" Background="LightSkyBlue" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}" FontWeight="Light" Background="AliceBlue"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Content="{Binding TestString}"/>
        </StackPanel>
    </Grid>
</UserControl>
