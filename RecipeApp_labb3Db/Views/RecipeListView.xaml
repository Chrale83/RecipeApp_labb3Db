<UserControl x:Class="RecipeApp_labb3Db.Presentation.Views.RecipeListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeApp_labb3Db.Presentation.Views" xmlns:viewmodels="clr-namespace:RecipeApp_labb3Db.Presentation.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RecipeListViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background= "White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ListView 
                  ItemsSource="{Binding Recipes}" 
                  Height="400"
                  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">

                            <TextBlock 
                    Text="{Binding Name}" 
                    Background="#F0F0F0" 
                    FontWeight="Bold" 
                    Foreground="#333333" 
                    Padding="5" 
                    FontSize="14" />
                            <TextBlock 
                    Text="{Binding Description}" 
                    Background="#FFFFFF" 
                    Foreground="#555555" 
                    Padding="5" 
                    FontWeight="Normal" 
                    FontSize="12"
                    TextWrapping="Wrap"
                                MaxWidth="225"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

           
        </StackPanel>
    </Grid>
</UserControl>
